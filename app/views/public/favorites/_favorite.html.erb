<% unless current_user&.guest_user? %>


  ❤️ <%= post.favorites.count %>

<% else %>

  <% if current_user.favorited?(post) %>
    <%= link_to post_favorite_path(post.id, current_user.favorites.find_by(post_id: post.id).id), method: :delete do %>
      ❤️ <%= post.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :post do %>
      ♡ <%= post.favorites.count %>
    <% end %>
  <% end %>

<% end %>
