<% unless current_user&.guest_user? %>
  <% if post_comment.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% post_comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: [post, post_comment], local: true do |f| %>
    <div class="mb-2">
      <%= f.text_area :comment, rows: 3, placeholder: "応援コメントをしよう！", class: "form-control" %>
    </div>
    <%= f.submit "送信", class: "btn btn-primary btn-sm" %>
  <% end %>
<% end %>
