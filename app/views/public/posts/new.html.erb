<h2>新規投稿</h2>

<%= form_with model: @post do |f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "本文" %> <br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :is_public, "公開する" %><br>
    <%= f.check_box :is_public %>
  </div>

  <div>
    <%= f.submit "投稿する" %>
  </div>
  
<% end %>