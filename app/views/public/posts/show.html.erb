
<h2><%= @post.title %></h2>

<p>
  投稿者：
  <%= link_to(@post.user.name || @post.user.email, user_path(@post.user)) %>
</p>
<% if user_signed_in? && !guest_user? && current_user != @post.user %>
  <% if current_user.following?(@post.user) %>
    <%= link_to "フォロー解除",
      relationship_path(current_user.active_relationships.find_by(followed_id: @post.user.id)),
      method: :delete %>
  <% else %>
    <%= link_to "フォローする",
      relationships_path(followed_id: @post.user.id),
      method: :post %>
  <% end %>
<% end %>


<p><%= simple_format(@post.body) %></p>

<% if user_signed_in? && @post.user == current_user %>
  <p>
    <%= link_to"編集",edit_post_path(@post) %> |
    <%= link_to "削除",@post, method: :delete, data:{confirm: "削除しますか？"} %>
  </p>
<% end %>

<p>投稿日：<%= l @post.created_at, format: :short %></p>
<% if user_signed_in? && @post.user == current_user %>
  <span><%= @post.is_public ? "【公開】" : "【非公開】" %></span>
<% end %>



<p><%= link_to "投稿一覧に戻る", posts_path %></p>

<%= render "public/post_comments/index", post: @post %>
 <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>

 <td>
  コメント数：<%= @post.post_comments.count %>
</td>

<td>
  <%= render 'public/favorites/favorite', post: @post %>
</td>