
<h2>投稿一覧</h2>

<% if user_signed_in? %>
  <p><%= link_to "新規投稿",new_post_path %></p>
<% end %>

<% @posts.each do |post| %>
  <div>
    <h3><%= link_to post.title, post_path(post) %></h3>
    <p>投稿者: <%= post.user.name || post.user.email %></p>
    <p><%= simple_format(post.body) %></p>
  </div>
<% end %>