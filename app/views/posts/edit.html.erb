<h2>投稿編集</h2>

<%= form_with model: @post do |f| %>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :is_public, "公開する" %>
    <%= f.check_box :is_public %>
  </div>

  <div>
    <%= f.submit "更新する" %>
  </div>

<% end %>

<p><%= link_to "投稿詳細に戻る", @post %></p>
<p><%= link_to "投稿一覧に戻る", posts_path %></p>