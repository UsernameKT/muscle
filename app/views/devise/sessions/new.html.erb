<h2>ログイン</h2>

<%= form_with model: resource,
              url: session_path(resource_name),
              local: true do |f| %>

  <div>
    メールアドレス<br>
    <%= f.email_field :email %>
  </div>

  <div>
    パスワード<br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.check_box :remember_me %>
    ログイン状態を保持する
  </div>

  <%= f.submit "ログイン" %>
<% end %>

<br>
<%= link_to "新規登録はこちら", new_registration_path(resource_name) %>
